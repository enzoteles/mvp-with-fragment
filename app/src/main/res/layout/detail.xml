<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="400px"
                android:scaleType="fitXY"
                android:background="@drawable/header_spiderman"
                android:id="@+id/img_full" />

            <ImageView
                android:layout_width="48px"
                android:layout_height="48px"
                android:id="@+id/img_back"
                android:layout_marginTop="10px"
                android:layout_marginLeft="30px"
                android:background="@drawable/arrow_left"
                />

            <LinearLayout
                android:layout_width="210px"
                android:layout_height="320px"
                android:layout_marginTop="130px"
                android:layout_marginLeft="30px"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_rev"
                    android:layout_width="205px"
                    android:layout_height="310px"
                    android:scaleType="fitXY"
                    android:background="@drawable/header_spiderman" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="550px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="45px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:text="AMAZING SPIDER-MAN (2014) #1 \n (MHAN VARIANT)"
                android:textColor="@android:color/white"
                android:id="@+id/txt_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:textSize="35px"
                android:text="Spidey comes face to face with the voluminous villain Klaw! Guest-starring THE BLACK PANTHER!!!\n"
                android:id="@+id/txt_desc" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="Published: "
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30px"
                android:layout_marginLeft="5px"
                android:text="April 30, 2014"
                android:id="@+id/txt_published" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5px"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:textSize="30px"
                android:textStyle="bold"
                android:text="Price: "
                android:textColor="@android:color/white"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 5.99"
                android:textSize="30px"
                android:layout_marginLeft="5px"
                android:textColor="@android:color/white"
                android:id="@+id/txt_price" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5px"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="Pages:"
                android:textSize="30px"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38"
                android:textSize="30px"
                android:layout_marginLeft="5px"
                android:textColor="@android:color/white"
                android:id="@+id/txt_pages" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>